{func
   reset_ambient
   {'ui::ui.enm' set_frame 500}}
{func
   turn_off_ambient
   {'ui::ui.enm' set_frame 0}}
#define LOADING_MAX_KNOB_FRAME
(32)
#define LOADING_KNOB_PERIOD_MS
(9000)
{new_panel
   loading
   (enter
      {tip.lbl
         set_localized_text
         {tips random_tip}}
      {$this anim_task load_poster.view LOADING_KNOB_PERIOD_MS 0 LOADING_MAX_KNOB_FRAME}
      {load_blink.view set_showing FALSE}
      {$this
         delay_task
         LOADING_KNOB_PERIOD_MS
         (preserve $this)
         {'ui::load_blink.view' set_showing TRUE}
         {animate_forever_30fps $this 'ui::load_blink.view'}})}
{new_gh_screen
   loading
   (panels loading)
   (allow_back FALSE)
   (animate_transition FALSE)
   (enter
      {reset_ambient}
      {synth stop_all_sfx}
      {{game get_bank_loader}
         reset}
      {meta set won_campaign FALSE}
      {ui goto_screen game})}