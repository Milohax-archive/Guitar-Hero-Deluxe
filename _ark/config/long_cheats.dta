#define OVERSHELL_SHORTCUT
({if
      {&&
      {exists ui}
      {!
         {ui in_transition}}
      {==
         {ui current_screen}
         {ui screen main}}}
      {set $modifier_exit {ui current_screen}}
      {synth play_sequence button_select}
      {ui push_screen overshell_main}
      })
((kPad_Tri kPad_Tri) OVERSHELL_SHORTCUT)
#define CHEATS_ALLOWED
({&&
      {exists ui}
      {!
         {ui in_transition}}
      {==
         {ui current_screen}
         {ui screen main}}})
#define G_BLUE
(kPad_R2)
#define G_RED
(kPad_Circle)
#define G_YELLOW
(kPad_Tri)
#define G_BLUE
(kPad_X)
#define G_ORANGE
(kPad_Square)
((G_ORANGE G_ORANGE G_BLUE G_YELLOW G_ORANGE)
   {if
      CHEATS_ALLOWED
      {if_else
         {== $cheat_guitar kGuitarAir}
         {do
            {set $cheat_guitar 0}
            {{ui screen main}
               display_msg
               cheat_air_guitar_off}
            {play_sfx cheat_off}}
         {do
            {set $cheat_guitar kGuitarAir}
            {{ui screen main}
               display_msg
               cheat_air_guitar_on}
            {play_sfx cheat}}}})
((G_BLUE G_ORANGE G_YELLOW G_BLUE G_BLUE)
