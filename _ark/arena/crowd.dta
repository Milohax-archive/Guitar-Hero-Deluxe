{func
   animate_crowd
   ($bad $ok $great $idle)
   {crowd
      animate
      {'|' kAnimReset kAnimGraphLoop}
      ((C_BAD)
         $bad
         -5
         5)
      ((C_OK)
         $ok
         -0.25
         0.25)
      ((C_GREAT)
         $great
         -1
         2)
      ((C_IDLE)
         $idle
         -0.25
         0.25)}}
{func
   set_crowd_sizes
   ($full $flat)
   {do
      ($shot)
      {set
         $shot
         {find_exists
            $syscfg
            arena
            venues
            {arena venue_name}
            reduced_crowd_shots
            {arena cam_msg}}}
      {if_else
         {&&
            {!= $shot kDataUnhandled}
            {>
               $flat
               {elem $shot 1}}}
         {crowd
            set_sizes
            $full
            {elem $shot 1}}
         {crowd set_sizes $full $flat}}}}
{func
   update_crowd
   {if_else
      {'||' $no_crowd $focusmode}
      {crowd set_sizes 0 0}
      {do
         {switch
            $arena.excitement
            (kExcitementBoot
               {set_crowd_sizes 0.1 0.1})
            (kExcitementBad
               {set_crowd_sizes 0.25 0.25})
            (kExcitementOkay
               {set_crowd_sizes 0.5 0.5})
            (kExcitementGreat
               {set_crowd_sizes 1 1})
            (kExcitementPeak
               {set_crowd_sizes 1 1})}
         {switch
            $arena.excitement
            (kExcitementBoot
               {animate_crowd 1.0 0.0 0.0 0.0})
            (kExcitementBad
               {animate_crowd 0.8 0.2 0.0 0.0})
            (kExcitementOkay
               {animate_crowd 0.0 0.8 0.2 0.0})
            (kExcitementGreat
               {animate_crowd 0.0 0.0 1.0 0.0})
            (kExcitementPeak
               {animate_crowd 0.0 0.0 1.0 0.0})}}}}
